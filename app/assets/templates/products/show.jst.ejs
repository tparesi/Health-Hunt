<h3><%= product.escape("title") %></h3>
<a href="<%= product.escape("url") %>">Check it Out!</a>
<br>
<br>
<button class="upvote"><%= product.get("votes") %> Upvotes</button>
<br>

<h4>
  <%= product.escape("description") %>
  <br>
  Product Submitted by: <%= product.escape("creator") %>
</h4>

<a href="#/products/<%= product.id %>/add_product">Add Product to a Collection</a>
<br>

<% if (product.get("owner_id") === HealthHunt.currentUser.get("id")) { %>
  <a href="#/products/<%= product.id %>/edit">Edit Product</a>
  <br>
  <button class="delete-product">Delete product</button>
<% } %>
<br>

<h5>Comments</h5>
<div class="comments"></div>
<br>

<form>
<input type="hidden" name="product_id" value="<%= product.id %>">

<label>
  Body
  <br>
  <textarea name="body"></textarea>
</label>
<br>

<button class="new-comment">Add Comment</button>
</form>
