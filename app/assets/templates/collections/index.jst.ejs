<div class="collection-header">
  <h2 class='collection-index-title'>Popular Collections</h2>
  <h3 class='collection-index-subtitle'>Our Most Robust Collections Curated for You From You.</h3>
</div>

<ul class='collections group'>
  <% collections.each(function (collection) { %>
    <li class='collection group'>
      <a href="#/collections/<%= collection.id %>">
        <%= collection.escape("title") %>
      </a>
    </li>
  <% }); %>
</ul>
