<h3>Choose Collection(s):</h3>

<form>
  <% HealthHunt.currentUser.collections().each(function (collection) { %>
    <% var idArray = [] %>
    <% collection.products().each( function(product) { idArray.push(product.id) }) %>

    <label>
      <input
        type="checkbox"
        name="collection_ids[]"
        value="<%= collection.get("id") %>"
        <% if (idArray.indexOf(product.id) >= 0) { %>
          checked
        <% } %>>
      <%= collection.escape("title") %>
    </label>
    <br>
  <% }) %>
</form>
