<meta name="viewport" content="width=device-width">

<div class="background-image"></div>

<div class="session-body">
  <div class="tag-line">Health Hunt is a <a href="www.producthunt.com">Product Hunt</a> Clone with with a focus on Health</div>

  <div class="errors">
    <%= flash[:errors].join("<br>").html_safe if flash[:errors] %>
  </div>

  <form class="group" action="<%= users_url %>" method="post">
    <%= auth_token_input %>

    <input type="text" name="user[email]" value="" placeholder="Email">
    <input type="password" name="user[password]" value="" placeholder="Password">

    <input type="submit" class="button" value="Sign Up">
  </form>

  <a href="/auth/twitter" class="button">Sign Up with Twitter</a>

  <form class="demo" action="<%= session_demo_url %>" method="post">
    <%= auth_token_input %>
    <button class="button">Demo User</button>
  </form>
</div>
