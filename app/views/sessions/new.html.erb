<div class="background-image"></div>
<div class="session-body">
  <div class="errors">
    <%= flash[:errors].join("<br>").html_safe if flash[:errors] %>
  </div>

  <form class="group" action="<%= session_url %>" method="post">
    <%= auth_token_input %>

    <input type="text" name="user[email]" value="" placeholder="Email">

    <input type="password" name="user[password]" value="" placeholder="Password">

    <input type="submit" class="button" value="Log In">
  </form>

  <a href="/auth/twitter" class="button">Log in with Twitter</a>
</div>
