<!DOCTYPE html>
<html>
<head>
  <title>ProductHuntClone</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if logged_in? %>
    <%= current_user.username %>
    <%= button_to "Log Out", session_url, :method => :delete %>
  <% else %>
    <%= link_to "Log In", new_session_url %>
    <%= link_to "Sign Up", new_user_url %>
  <% end %>

<br>

<%= flash[:errors].join("<br>").html_safe if flash[:errors] %>

<%= yield %>

</body>
</html>
