<!DOCTYPE html>
<html>
<head>
  <title>Health Hunt</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

</head>
<body>
  <header class="header group">
    <nav class="header-nav">
      <h1 class="header-logo">
        <a href="#">Health Hunt</a>
      </h1>

      <div class="session-header group">
        <% if logged_in? %>
          <a href="#/profile/<%= current_user.id %>" class="user-email"><%= current_user.email.match(/.+?(?=@)/) %></a>
          <%= button_to "Log Out", session_url, :method => :delete, :class => "logout"  %>
        <% else %>
          <%= link_to "Log In", new_session_url %>
          <%= link_to "Sign Up", new_user_url %>
        <% end %>
      </div>
    </nav>
  </header>

<%= flash[:errors].join("<br>").html_safe if flash[:errors] %>

<%= yield %>

</body>
</html>
